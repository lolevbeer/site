{
  "defaults": {
    "timeout": 10000,
    "wait": 1000,
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ]
    },
    "standard": "WCAG2AA",
    "runners": [
      "axe"
    ],
    "ignore": [
      "notice",
      "warning"
    ]
  },
  "urls": [
